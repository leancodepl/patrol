default_platform(:ios)

git_authorization = "#{ENV["GIT_USERNAME"]}:#{ENV["GIT_TOKEN"]}"

platform :ios do
  desc "Signs app on CI"
  lane :certificates do
    setup_ci if ENV['CI']

    app_store_connect_api_key(
      key_id: ENV["APP_STORE_KEY_ID"],
      issuer_id: ENV["APP_STORE_ISSUER_ID"],
      key_content: ENV["APP_STORE_KEY"],
      in_house: false,
    )

    match(
      type: "development",
      git_basic_authorization: Base64.strict_encode64(git_authorization),
      app_identifier: ["pl.leancode.patrol.*"]
    )

    update_code_signing_settings(
      use_automatic_signing: false,
      targets: ["Runner", "RunnerUITests"],
      build_configurations: ["Release"],
      profile_uuid: ENV["sigh_pl.leancode.patrol.*_development"],
    )
  end
end
