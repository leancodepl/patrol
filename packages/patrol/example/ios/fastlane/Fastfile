# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Signs app on CI"
  lane :certificates do
    setup_ci if ENV['CI']

    app_store_connect_api_key(
      key_id: ENV["APP_STORE_KEY_ID"],
      issuer_id: ENV["APP_STORE_ISSUER_ID"],
      key_content: ENV["APP_STORE_KEY"],
      in_house: false,
    )

    match(
      type: "development",
      git_basic_authorization: Base64.strict_encode64("#{ENV["GIT_USERNAME"]}:#{ENV["GIT_USERNAME"]}"),
      readonly: is_ci,
      app_identifier: ["pl.leancode.patrol.Example", "pl.leancode.patrol.Example.RunnerUITests"]
    )
  end
end
